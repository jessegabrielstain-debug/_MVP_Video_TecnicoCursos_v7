{
  "name": "mvp-video-tecnico-cursos-v7",
  "version": "1.0.0",
  "description": "Sistema de Produção de Vídeos - Testes de Integração",
  "type": "module",
  "scripts": {
    "start": "npm run start --prefix estudio_ia_videos",
    "app:dev": "npm run dev --prefix estudio_ia_videos",
    "app:build": "npm run build --prefix estudio_ia_videos",
    "redis:start": "docker compose up -d redis",
    "redis:stop": "docker compose stop redis",
    "redis:version": "docker compose run --rm redis redis-server --version",
    "redis:logs": "docker compose logs -f redis",
    "test:database": "node scripts/validate-database-setup.js",
    "test:integration": "node scripts/test-integration-complete.js",
    "test:tts": "node scripts/test-tts-integration.js",
    "test:e2e": "node scripts/test-end-to-end.js",
    "test:all": "node scripts/run-all-tests.js",
    "setup:supabase": "tsx scripts/setup-supabase-auto.ts",
    "type-check": "tsc -p tsconfig.typecheck.json --noEmit",
    "type-check:strict": "tsc -p tsconfig.strict.json --noEmit --pretty",
    "lint": "eslint . --ext .ts,.tsx --max-warnings=0",
    "audit:any": "tsx scripts/audit-any.ts",
    "quality:any": "tsx scripts/audit-any.ts --fail-on-findings",
    "quality:report": "tsx scripts/audit-any.ts",
    "quality:check": "npm run type-check && npm run lint -s && npm run quality:any",
    "ci": "npm run type-check && npm run audit:any && npm run test:contract:video-jobs && (npm run test:all || npm run test:integration || echo no-tests) && (npm run ci:strict || echo strict-pending)",
    "test:contract": "node scripts/run-contract-suite.js",
    "test:contract:video-jobs-query": "node --no-warnings scripts/test-contract-video-jobs-query.js",
    "test:contract:video-jobs-cancel": "node --no-warnings scripts/test-contract-video-jobs-cancel.js",
    "test:contract:video-jobs-progress": "node --no-warnings scripts/test-contract-video-jobs-progress.js",
    "test:contract:video-jobs-requeue": "node --no-warnings scripts/test-contract-video-jobs-requeue.js",
    "test:contract:video-jobs-id": "node --no-warnings scripts/test-contract-video-jobs-id.js",
    "format": "prettier -w .",
    "validate:env": "node --loader ts-node/esm --no-warnings scripts/validate-environment.ts",
    "audit:rls": "node --loader ts-node/esm --no-warnings scripts/rls-audit.ts",
    "ci:strict": "npm run type-check:strict || echo strict-pending",
    "test:contract:video-jobs": "node --no-warnings scripts/test-contract-video-jobs.js",
    "test:contract:video-jobs-status": "node --no-warnings scripts/test-contract-video-jobs-status.js",
    "test:contract:video-jobs-response": "node --no-warnings scripts/test-contract-video-jobs-response.js",
    "test:contract:video-jobs-stats": "node --no-warnings scripts/test-contract-video-jobs-stats.js",
    "test:contract:video-jobs-list-cache": "node --no-warnings scripts/test-contract-video-jobs-list-cache.js",
    "test:contract:video-jobs-rate-limit": "node --no-warnings scripts/test-contract-video-jobs-rate-limit.js",
    "test:contract:video-jobs-metrics": "node --no-warnings scripts/test-contract-video-jobs-metrics.js",
    "test:suite:pptx": "jest \"estudio_ia_videos/app/tests/pptx-processing.test.ts\" \"estudio_ia_videos/app/tests/pptx-processor.test.ts\" \"estudio_ia_videos/app/tests/pptx-system.test.ts\" --runInBand --coverage --coverageDirectory estudio_ia_videos/app/coverage --coverageReporters text-summary --coverageReporters lcov --coverageReporters json-summary --json --outputFile evidencias/fase-2/pptx-suite-result.json",
    "test": "jest",
    "test:e2e:playwright": "playwright test",
    "test:services": "jest estudio_ia_videos/app/__tests__/lib/services --runInBand",
    "test:services:watch": "jest estudio_ia_videos/app/__tests__/lib/services --watch",
    "perf:lighthouse": "ts-node scripts/performance/run-lighthouse.ts",
    "report:weekly": "ts-node scripts/governanca/generate-weekly-report.ts",
    "kpis:update": "ts-node scripts/governanca/update-kpis.ts",
    "health": "tsx scripts/health-check.ts",
    "rbac:apply": "tsx scripts/apply-rbac-schema.ts",
    "test:rbac": "jest --testPathPattern=estudio_ia_videos/app/__tests__/lib/hooks/use-rbac.test.ts",
    "test:e2e:rbac": "playwright test estudio_ia_videos/app/e2e/",
    "logs:test": "tsx scripts/test-logger.ts",
    "validate:post-audit": "tsx scripts/validate-post-audit.ts",
    "validate:system": "npm run validate:post-audit && npm run health",
    "validate:consolidated": "tsx scripts/validate-consolidated.ts",
    "test:pptx-processor": "tsx scripts/test-pptx-processor.ts",
    "test:pptx-integration": "tsx scripts/test-pptx-integration.ts",
    "worker:bull": "tsx scripts/render-worker-bull.ts",
    "worker:legacy": "node scripts/render-worker.js",
    "db:migrate:nr": "tsx scripts/apply-nr-templates-migration.ts",
    "env:min": "tsx scripts/validate-env-min.ts"
  },
  "dependencies": {
    "@babel/runtime": "^7.26.0",
    "@bull-board/api": "^6.14.2",
    "@bull-board/express": "^6.14.2",
    "@bull-board/ui": "^6.14.2",
    "@hookform/resolvers": "^5.2.2",
    "@sentry/nextjs": "^10.26.0",
    "@supabase/supabase-js": "^2.75.0",
    "@upstash/redis": "^1.35.6",
    "axios": "^1.12.2",
    "bullmq": "^5.64.1",
    "chalk": "^5.6.2",
    "clsx": "^2.1.1",
    "cross-fetch": "^4.1.0",
    "dotenv": "^17.2.3",
    "edge-tts": "^1.0.1",
    "elevenlabs": "^1.59.0",
    "ioredis": "^5.8.2",
    "kysely": "^0.28.8",
    "node-fetch": "^3.3.2",
    "pg": "^8.16.3",
    "react-hook-form": "^7.66.1",
    "tailwind-merge": "^3.4.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/plugin-transform-runtime": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@babel/preset-react": "^7.28.5",
    "@babel/preset-typescript": "^7.28.5",
    "@playwright/test": "^1.55.1",
    "@types/eslint": "^8.56.12",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.10.0",
    "@types/pg": "^8.15.5",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "chrome-launcher": "^1.1.1",
    "eslint": "^9.13.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.29.1",
    "globals": "^16.5.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lighthouse": "^12.0.0",
    "prettier": "^3.3.3",
    "ts-jest": "^29.4.5",
    "typescript-eslint": "^8.46.4",
    "whatwg-fetch": "^3.6.20"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "video-production",
    "supabase",
    "tts",
    "integration-tests"
  ],
  "author": "Sistema de Produção de Vídeos",
  "license": "MIT"
}
