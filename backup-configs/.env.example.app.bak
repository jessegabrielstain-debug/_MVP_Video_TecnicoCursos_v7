# ===================================
# DATABASE & ORM
# ===================================

# Supabase Database URL
DATABASE_URL="postgresql://postgres:[PASSWORD]@db.[PROJECT_REF].supabase.co:5432/postgres"

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL="https://[PROJECT_REF].supabase.co"
SUPABASE_SERVICE_ROLE_KEY="[SERVICE_ROLE_KEY]"
SUPABASE_ANON_KEY="[ANON_KEY]"

# ===================================
# AUTHENTICATION
# ===================================

# NextAuth Configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="[GENERATE_RANDOM_SECRET]"

# OAuth Providers (opcional)
GOOGLE_CLIENT_ID="[GOOGLE_CLIENT_ID]"
GOOGLE_CLIENT_SECRET="[GOOGLE_CLIENT_SECRET]"

# ===================================
# TTS & AI SERVICES
# ===================================

# ElevenLabs TTS
ELEVENLABS_API_KEY="[ELEVENLABS_API_KEY]"
ELEVENLABS_MODEL_ID="eleven_multilingual_v2"

# Azure Cognitive Services
AZURE_SPEECH_KEY="[AZURE_SPEECH_KEY]"
AZURE_SPEECH_REGION="[AZURE_REGION]"

# Google Cloud TTS
GOOGLE_CLOUD_PROJECT_ID="[GCP_PROJECT_ID]"
GOOGLE_APPLICATION_CREDENTIALS="[PATH_TO_SERVICE_ACCOUNT_JSON]"

# OpenAI (para AI features)
OPENAI_API_KEY="[OPENAI_API_KEY]"

# ===================================
# CACHE & QUEUE
# ===================================

# Redis Configuration
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD="[REDIS_PASSWORD]"

# BullMQ Queue
QUEUE_REDIS_HOST="localhost"
QUEUE_REDIS_PORT="6379"
QUEUE_REDIS_PASSWORD="[REDIS_PASSWORD]"

# ===================================
# VIDEO RENDERING
# ===================================

# FFmpeg Configuration
FFMPEG_PATH="/usr/bin/ffmpeg"
FFPROBE_PATH="/usr/bin/ffprobe"

# Rendering Settings
RENDER_TEMP_DIR="./temp/render"
RENDER_OUTPUT_DIR="./output/videos"
RENDER_MAX_CONCURRENT_JOBS="2"
RENDER_TIMEOUT_MINUTES="30"

# Video Quality Settings
DEFAULT_VIDEO_RESOLUTION="1920x1080"
DEFAULT_VIDEO_FPS="30"
DEFAULT_VIDEO_BITRATE="2000k"
DEFAULT_AUDIO_BITRATE="128k"

# ===================================
# STORAGE & CDN
# ===================================

# Supabase Storage
SUPABASE_STORAGE_BUCKET="videos"
SUPABASE_STORAGE_URL="https://[PROJECT_REF].supabase.co/storage/v1"

# AWS S3 (backup storage)
AWS_ACCESS_KEY_ID="[AWS_ACCESS_KEY]"
AWS_SECRET_ACCESS_KEY="[AWS_SECRET_KEY]"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="mvp-video-storage"

# ===================================
# MONITORING & ANALYTICS
# ===================================

# Sentry Error Tracking
SENTRY_DSN="[SENTRY_DSN]"
SENTRY_ORG="[SENTRY_ORG]"
SENTRY_PROJECT="[SENTRY_PROJECT]"

# Analytics
GOOGLE_ANALYTICS_ID="[GA_MEASUREMENT_ID]"

# ===================================
# EXTERNAL INTEGRATIONS
# ===================================

# Webhook URLs
WEBHOOK_SECRET="[WEBHOOK_SECRET]"
WEBHOOK_BASE_URL="https://your-domain.com/api/webhooks"

# Email Service (opcional)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="[EMAIL]"
SMTP_PASSWORD="[APP_PASSWORD]"

# ===================================
# DEVELOPMENT & TESTING
# ===================================

# Environment
NODE_ENV="development"
NEXT_PUBLIC_APP_ENV="development"

# Debug Flags
DEBUG_PRISMA="false"
DEBUG_REDIS="false"
DEBUG_TTS="false"

# Test Database (opcional)
TEST_DATABASE_URL="postgresql://postgres:password@localhost:5432/mvp_video_test"

# ===================================
# PRODUCTION SETTINGS
# ===================================

# Domain & SSL
NEXT_PUBLIC_DOMAIN="https://your-production-domain.com"
FORCE_HTTPS="true"

# Rate Limiting
RATE_LIMIT_MAX="100"
RATE_LIMIT_WINDOW="900000"

# File Upload Limits
MAX_FILE_SIZE="100MB"
MAX_FILES_PER_USER="50"

