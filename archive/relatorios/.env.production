# ============================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# MVP Video IA Studio v7 - Production Ready
# ============================================

# ============================================
# ENVIRONMENT SETTINGS
# ============================================
NODE_ENV=production
NEXT_PUBLIC_APP_ENV=production
NEXT_PUBLIC_APP_VERSION=7.0.0

# ============================================
# SUPABASE PRODUCTION CONFIGURATION
# ============================================
NEXT_PUBLIC_SUPABASE_URL=https://your-production-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-production-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-production-service-role-key
SUPABASE_PROJECT_REF=your-production-project-ref
SUPABASE_DB_URL=postgresql://postgres:your-production-password@db.your-production-project.supabase.co:5432/postgres

# ============================================
# AUTHENTICATION PRODUCTION
# ============================================
NEXTAUTH_SECRET=your-super-secure-production-secret-min-32-chars
NEXTAUTH_URL=https://your-production-domain.com

# ============================================
# SECURITY CONFIGURATION
# ============================================
# Rate limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=true

# CORS settings
CORS_ORIGIN=https://your-production-domain.com
CORS_CREDENTIALS=true

# Security headers
SECURITY_HEADERS_ENABLED=true
CSP_ENABLED=true
HSTS_ENABLED=true

# ============================================
# AI SERVICES PRODUCTION
# ============================================
# OpenAI
OPENAI_API_KEY=your-production-openai-key
OPENAI_ORG_ID=your-production-org-id
OPENAI_MAX_TOKENS=4000
OPENAI_TIMEOUT=30000

# Azure Speech Services
AZURE_SPEECH_KEY=your-production-azure-speech-key
AZURE_SPEECH_REGION=brazilsouth
AZURE_SPEECH_ENDPOINT=https://brazilsouth.api.cognitive.microsoft.com/

# ElevenLabs API
ELEVENLABS_API_KEY=your-production-elevenlabs-key
ELEVENLABS_VOICE_STABILITY=0.75
ELEVENLABS_VOICE_SIMILARITY=0.75

# Google Cloud TTS
GOOGLE_CLOUD_PROJECT_ID=your-production-project-id
GOOGLE_CLOUD_KEY_FILE=path/to/production-service-account.json

# ============================================
# STORAGE CONFIGURATION
# ============================================
# AWS S3 Production
AWS_ACCESS_KEY_ID=your-production-aws-access-key
AWS_SECRET_ACCESS_KEY=your-production-aws-secret-key
AWS_BUCKET_NAME=mvp-video-studio-production
AWS_REGION=us-east-1
AWS_CLOUDFRONT_DOMAIN=your-cloudfront-domain.cloudfront.net

# Supabase Storage
SUPABASE_STORAGE_BUCKET_PROJECTS=projects-prod
SUPABASE_STORAGE_BUCKET_VIDEOS=videos-prod
SUPABASE_STORAGE_BUCKET_THUMBNAILS=thumbnails-prod
SUPABASE_STORAGE_BUCKET_ASSETS=assets-prod

# ============================================
# CACHE AND QUEUE PRODUCTION
# ============================================
# Redis Production
REDIS_URL=rediss://your-production-redis-host:6380
REDIS_PASSWORD=your-production-redis-password
REDIS_TLS_ENABLED=true
REDIS_MAX_RETRIES=3
REDIS_RETRY_DELAY=1000

# Queue Configuration
QUEUE_CONCURRENCY=5
QUEUE_MAX_JOBS=1000
QUEUE_JOB_TIMEOUT=300000
QUEUE_RETRY_ATTEMPTS=3

# Cache Settings
CACHE_TTL_DEFAULT=3600
CACHE_TTL_STATIC=86400
CACHE_TTL_DYNAMIC=300

# ============================================
# MONITORING AND LOGGING
# ============================================
# Error Tracking (Sentry)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=production
SENTRY_RELEASE=mvp-video-studio@7.0.0
SENTRY_TRACES_SAMPLE_RATE=0.1

# Performance Monitoring
PERFORMANCE_MONITORING_ENABLED=true
PERFORMANCE_SAMPLE_RATE=0.1
PERFORMANCE_THRESHOLD_MS=2000

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_ENABLED=true
LOG_FILE_PATH=/var/log/mvp-video-studio/app.log
LOG_ROTATION_ENABLED=true

# Analytics
ANALYTICS_ENABLED=true
ANALYTICS_BATCH_SIZE=100
ANALYTICS_FLUSH_INTERVAL=30000

# ============================================
# BACKUP AND RECOVERY
# ============================================
# Database Backup
DB_BACKUP_ENABLED=true
DB_BACKUP_SCHEDULE=0 2 * * *
DB_BACKUP_RETENTION_DAYS=30
DB_BACKUP_S3_BUCKET=mvp-video-studio-backups

# File Backup
FILE_BACKUP_ENABLED=true
FILE_BACKUP_SCHEDULE=0 3 * * *
FILE_BACKUP_RETENTION_DAYS=90

# ============================================
# PERFORMANCE OPTIMIZATION
# ============================================
# Image Optimization
IMAGE_OPTIMIZATION_ENABLED=true
IMAGE_QUALITY=85
IMAGE_FORMATS=webp,avif,jpeg
IMAGE_SIZES=640,750,828,1080,1200,1920,2048,3840

# Video Processing
VIDEO_PROCESSING_QUALITY=high
VIDEO_PROCESSING_PRESET=medium
VIDEO_PROCESSING_CRF=23
VIDEO_PROCESSING_MAX_BITRATE=5000k

# Bundle Optimization
BUNDLE_ANALYZER_ENABLED=false
TREE_SHAKING_ENABLED=true
CODE_SPLITTING_ENABLED=true
COMPRESSION_ENABLED=true

# ============================================
# HEALTH CHECKS
# ============================================
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_ENDPOINTS=/api/health,/api/status

# ============================================
# FEATURE FLAGS
# ============================================
FEATURE_AI_ANALYSIS=true
FEATURE_3D_AVATARS=true
FEATURE_LIP_SYNC=true
FEATURE_COLLABORATION=true
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_COMPLIANCE_DETECTION=true

# Mock Mode (DISABLED in production)
REDIS_MOCK_MODE=false
ELEVENLABS_MOCK=false
SUPABASE_MOCK=false
AI_ANALYSIS_MOCK=false
AVATAR_3D_MOCK=false
LIP_SYNC_MOCK=false

# ============================================
# NOTIFICATION SERVICES
# ============================================
# Push Notifications
VAPID_PUBLIC_KEY=your-production-vapid-public-key
VAPID_PRIVATE_KEY=your-production-vapid-private-key
VAPID_SUBJECT=mailto:admin@your-production-domain.com

# Email Notifications
SMTP_HOST=smtp.your-email-provider.com
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=noreply@your-production-domain.com
SMTP_PASS=your-smtp-password

# ============================================
# THIRD-PARTY INTEGRATIONS
# ============================================
# Stripe (if payment features are enabled)
STRIPE_PUBLISHABLE_KEY=pk_live_your-stripe-publishable-key
STRIPE_SECRET_KEY=sk_live_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret

# Google Analytics
GA_MEASUREMENT_ID=G-XXXXXXXXXX

# ============================================
# DEPLOYMENT CONFIGURATION
# ============================================
DEPLOYMENT_PLATFORM=vercel
DEPLOYMENT_REGION=us-east-1
DEPLOYMENT_BRANCH=main
DEPLOYMENT_AUTO_DEPLOY=true

# Build Configuration
BUILD_TIMEOUT=600
BUILD_MEMORY=3008
BUILD_CONCURRENT_BUILDS=1

# ============================================
# COMPLIANCE AND LEGAL
# ============================================
GDPR_COMPLIANCE_ENABLED=true
LGPD_COMPLIANCE_ENABLED=true
COOKIE_CONSENT_ENABLED=true
PRIVACY_POLICY_URL=https://your-production-domain.com/privacy
TERMS_OF_SERVICE_URL=https://your-production-domain.com/terms